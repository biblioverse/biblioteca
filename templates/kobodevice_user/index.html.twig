{% extends 'base.html.twig' %}

{% block title %}Kobo index{% endblock %}

{% block body %}
    <table class="table table-bordered table-striped table-hover">
        <thead>
            <tr>
                <th>Name</th>
                <th>AccessKey</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for kobo in kobos %}
            <tr>
                <td>{{ kobo.name }}</td>
                <td>{{ kobo.accessKey }}</td>
                <td>
                    {% if is_granted('EDIT', kobo) %}
                        <a href="{{ path('app_kobodevice_user_edit', {'id': kobo.id}) }}" class="btn btn-primary btn-sm">Edit</a>
                    {% endif %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_kobodevice_user_new') }}" class="btn btn-primary">Create new</a>


    {{ include('kobodevice_user/instructions.html.twig') }}
{% endblock %}
