{% if is_granted("DELETE", kobo) %}
<form method="post" action="{{ path('app_kobodevice_user_delete', {'id': kobo.id}) }}" onsubmit="return confirm('{{ "generic.are-you-sure-you-want-to-delete-this-item"|trans }}');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ kobo.id) }}">
    <button class="btn btn-danger">{{ "kobo.device.delete"|trans }}</button>
</form>
{% endif %}