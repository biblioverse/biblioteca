{% extends 'base.html.twig' %}

{% block title %}Kobo Proxy Logs{% endblock %}

{% block body %}
    <table class="table table-bordered table-striped table-hover">
        <thead>
            <tr>
                <th>Date</th>
                <th>Channel</th>
                <th>Level</th>
                <th>Message</th>
                <th>Context</th>
            </tr>
        </thead>
        <tbody>
        {% for record in records %}
            <tr>
                <td>
                   {{ record.datetime|date('d.m.Y H:i:s') }}
                </td>
                <td>
                   {{ record.channel }}
                </td>
                <td>
                   {{ record.level }}
                </td>
                <td>
                   {{ record.message }}
                </td>
                <td>
                   {{ record.context|json_encode }}
                </td>

            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
