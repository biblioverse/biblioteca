<div {{ attributes.defaults({
    class: 'modal fade text-start modal-xl',
    tabindex: '-1',
    'aria-hidden': 'true',
    id: id ? id : false,
}).defaults(stimulus_controller('bootstrap-modal')) }}>
    <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
        <div class="modal-content" >
            {% block modal_full_content %}
                {% if block('modal_header') %}
                    <div class="modal-header">
                        {% block modal_header %}{% endblock %}
                    </div>
                {% endif %}

                <div class="modal-body" style="max-height:75vh; overflow:scroll">
                    {% block modal_body %}{% endblock %}
                </div>

                {% if block('modal_footer') %}
                    <div class="modal-footer">
                        {% block modal_footer %}
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>

                        {% endblock %}
                    </div>
                {% endif %}
            {% endblock %}
        </div>
    </div>
</div>
