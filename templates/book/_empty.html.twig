{# @var book App\Entity\Book #}
<div class="m-1 mb-4">
    <div class="book">
        <div class="book__cover" style="background-image:url('{{ asset('images/blank.jpg')|imagine_filter('thumb') }}');">
            <div class="book__detail text-danger text-warning">
                {{ "book.missing"|trans }}
            </div>
        </div>
        <div class="book__page"></div>
    </div>
    <small>
        <strong>{{ "book.missing"|trans }}</strong><br />
        {% if serie %}
            <a href="{{ filter_book_url({'serie': serie}) }}" class="text-decoration-none text-secondary">
                <i class="bi bi-list-ol"></i>&nbsp;{{ serie }} ({{ index }})
            </a>
        </a>
        {% endif %}
    </small>
</div>