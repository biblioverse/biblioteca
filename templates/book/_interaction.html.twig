{# @var book App\Entity\Book #}
{% set existing=false %}
{% for interaction in book.bookInteractions %}
    {% if is_granted('VIEW',interaction) %}
        {% set existing=true %}
        {{ component('InlineEditInteraction',{'user':app.user,'book':book, 'interaction':interaction}) }}
    {% endif %}
{% endfor %}

{% if not existing %}
    {{ component('InlineEditInteraction',{'user':app.user,'book':book}) }}
{% endif %}