{% extends 'base.html.twig' %}

{% block title %}{{ book.title }}{% endblock %}

{% block body %}

<div class="container">
    <div class="row">
        <div class="col-md-3">
            {% if book.imageFilename is not null %}
                <img src="{{ asset('covers/'~book.imagePath~book.imageFilename)|imagine_filter('big') }}" class="card-img-top w-100" alt="Picture for {{ book.title }}">
            {% else %}
                <img src="{{ asset('images/blank.jpg')|imagine_filter('big') }}" class="card-img-top w-100" alt="No picture for {{ book.title }}">
            {% endif %}
            {{ include('book/_interaction.html.twig') }}

            {{ component('UploadBookPicture',{'book':book}) }}

            {{ component('AddBookToShelf',{'book':book, 'user':app.user}) }}
        </div>
        <div class="col-md-9">
            <table class="table table-striped w-100">
                <tr>
                    <th style="width: 150px">Download</th>
                    <td>
                        <a target="_blank" href="{{ asset('books/'~book.bookPath~book.bookFilename) }}"><i class="bi bi-file-earmark-arrow-down"></i> Download {{ book.extension }}</a>
                    </td>
                </tr>
                <tr>
                    <th>Title</th>
                    <td>
                        {{ component('InlineEditBook', {'book':book, 'field':'title', suggestions:suggestions}) }}
                    </td>
                </tr>
                <tr>
                    <th>Authors</th>
                    <td>{{ component('InlineEditBook', {'book':book, 'field':'authors',  suggestions:suggestions}) }}</td>
                </tr>
                <tr>
                    <th>Summary</th><td>
                        {{ component('InlineEditBook', {'book':book, 'field':'summary', suggestions:suggestions}) }}
                    </td>
                </tr>
                <tr>
                    <th>Serie</th><td>
                        <div>
                            {{ component('InlineEditBook', {'book':book, 'field':'serie', suggestions:suggestions}) }}
                        </div>
                        {% if book.serie is not null %}
                            <div class="w-25 d-inline-block">
                                {{ component('InlineEditBook', {'book':book, 'field':'serieIndex', suggestions:suggestions}) }}
                            </div>
                        {% endif %}

                    </td>
                </tr>
                <tr>
                    <th>Publisher</th><td>{{ component('InlineEditBook', {'book':book, 'field':'publisher', suggestions:suggestions}) }}</td>
                </tr>

                <tr>
                    <th>Tags</th><td>{{ component('InlineEditBook', {'book':book, 'field':'tags', suggestions:suggestions}) }}</td>
                </tr>
                <tr>
                    <th>Verified</th><td>{{ component('InlineEditBook', {'book':book, 'field':'verified', suggestions:suggestions}) }}</td>
                </tr>
                <tr>
                    <td colspan="2">
                        <ul class="small">
                            <li>Book: <code>{{ book.bookPath }}{{ book.bookFilename }}</code></li>
                            <li>Image: <code>{{ book.imagePath }}{{ book.imageFilename }}</code></li>
                        </ul>
                    </td>
                </tr>

            </table>

            {% if not book.verified and is_granted('EDIT', book) %}
            <div class="row">

                {% if suggestions.image|length >0 %}
                <div class="col-md-12">
                    <h5>Suggested images</h5>
                </div>
                {% for key, image in suggestions.image %}
                    <div class="col-md-2">
                        <a href="{{ path('app_book_downloadImage', {'id':book.id, 'image':key }) }}">
                            <img src="{{ image }}" class="w-100">
                        </a>
                    </div>
                {% endfor %}
                {% endif %}

                <div class="btn-group btn-group-sm my-3">
                    <a class="btn btn-sm btn-outline-primary" target="_blank" href="https://www.google.com/search?q={{ book.title~" "~book.authors|join(" ")|url_encode }}&tbm=isch&source=lnms&sa=X&dpr=1">Search cover on google images</a>
                    <a class="btn btn-sm btn-outline-primary" href="{{ path('app_book', {'book':book.id, 'slug':book.slug, 'refresh':true}) }}">Get Suggestions from Books API</a>
                    <a class="btn btn-sm btn-outline-primary" href="{{ path('app_extractCover', {'id':book.id}) }}">Try to extract cover from file</a>
                </div>
            </div>
            {% endif %}
            {% if serie|length > 0 %}
                <div>
                    <h5>Books in serie</h5>
                    <div class="row">
                    {% for index in 1..serieMax %}
                        <div class="col-4 col-md-2">
                            {% if (serie[index] is not defined or serie[index]|length>1) %}
                                <span class="badge text-bg-warning"><i class="bi bi-exclamation-diamond-fill"></i>
                                {% if (serie[index] is not defined) %}Missing book{% endif %}
                                {% if (serie[index] is defined and serie[index]|length>1) %}Multiple books with same index{% endif %}
                                </span>
                            {% endif %}
                            {% if serie[index] is defined %}
                                {% for indexBook in serie[index] %}
                                        {% include 'book/_teaser.html.twig' with {book:indexBook} %}
                                {% endfor %}
                            {% else %}
                                    {% include 'book/_empty.html.twig' with {serie:book.serie, index:index} %}
                            {% endif %}
                        </div>
                    {% endfor %}
                    </div>
                    {% if serie['?'] is defined %}
                        <h5>Other Books</h5>
                        <div class="row">
                            {% for indexBook in serie['?'] %}
                                <div class="col-4 col-md-2">
                                    {% include 'book/_teaser.html.twig' with {book:indexBook} %}
                                </div>
                            {% endfor %}
                        </div>
                    {% endif %}
                </div>
            {% endif %}
        </div>
    </div>
    <div class="row">
        <div class="col-md-1 mt-3">
            {{ form(form) }}
        </div>
    </div>
</div>

{% endblock %}
