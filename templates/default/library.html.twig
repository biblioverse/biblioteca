{% extends 'base.html.twig' %}

{% block body %}
    <div class="container px-8 mx-auto xl:px-5  max-w-screen-lg py-5 lg:py-8">
        <div class="grid gap-10 grid-cols-3 ">
            {% if library.image is not null %}
                <div class=" overflow-hidden rounded-md  transition-all col-span-3">
                    <img alt="{{ article.title }}"
                         class="object-cover transition-all w-full"
                         src="{{ asset('images/'~article.image)|imagine_filter('cover') }}">
                </div>
            {% endif %}

            <article class="group col-span-2">
                <div class="">
                    <div>
                        <h1 class="text-2xl font-semibold leading-snug tracking-tight mt-2">
                            {{ library.name }}
                        </h1>
                        <div>
                            {{ library.body|raw }}
                        </div>
                        <div>
                            {{ form(form) }}
                        </div>
                    </div>
                </div>
            </article>
            <aside>
                <div>{{ library.schedule|raw }}</div>
                <div>{{ library.address|raw }}</div>
                <div>{{ library.phone }}</div>
                <div>{{ library.email }}</div>
            </aside>
        </div>
    </div>
{% endblock %}

