{% extends 'base.html.twig' %}

{% block title %}Hello DefaultController!{% endblock %}

{% block body %}


    <div class="container px-8 mx-auto xl:px-5  max-w-screen-lg py-5 lg:py-8">
        <div class="grid gap-10 grid-cols-2 lg:gap-10">
            {% if article.image is not null %}
            <aside class="group">
                <div class=" overflow-hidden rounded-md  transition-all">
                    <img alt="{{ article.title }}"
                         class="object-cover transition-all w-full"
                         src="{{ asset('images/'~article.image)|imagine_filter('big') }}">
                </div>
            </aside>
            {% endif %}
            <article class="group">
                <div class="">
                    <div>
                        <div class="flex gap-3">
                <span class="inline-block text-xs font-medium tracking-wider uppercase   mt-5 text-orange-700">
                    {{ article.type }}
                </span>
                        </div>
                        <h1 class="text-2xl font-semibold leading-snug tracking-tight mt-2">
                            <span class="">
                                {% if article.eventDate is not null %}
                                    <span class="bg-red-500 border text-sm rounded mr-1 p-1 text-white">
                                        {{ article.eventDate|date('d.m.Y') }}
                                    </span>
                                {% endif %}
                                {{ article.title }}
                            </span>
                        </h1>
                        <div class="mt-2">
                            {{ article.heading|raw }}
                        </div>
                        <div>
                            {{ article.body|raw }}
                        </div>
                        <div class="mt-3 flex items-center space-x-3 text-gray-500">
                            <time class="truncate text-xs" datetime="2022-09-25T15:15:00.000Z">&Eacute;crit
                                le {{ article.created|date('d.m.Y') }}</time>
                        </div>
                    </div>
                </div>
            </article>
        </div>
    </div>

{% endblock %}
