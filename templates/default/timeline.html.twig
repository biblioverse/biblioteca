{% extends 'base.html.twig' %}

{% block title %}My Timeline{% endblock %}
{% block body %}

    <div class="btn-group">
        {% for availableYear in years %}
            <a href="{{ path('app_timeline', {'year': availableYear??'null', 'type':type??'null'}) }}" class="btn {{ year==availableYear?'active'}} btn-secondary">{{ availableYear??'None' }}</a>
        {% endfor %}
    </div>

    <div class="btn-group" >
        <a href="{{ path('app_timeline', {'year': year??'null', 'type':'all'}) }}" class="btn {{ 'all'==type?'active'}} btn-secondary">All</a>
        {% for availableType in types %}
            <a href="{{ path('app_timeline', {'year': year??'null', 'type':availableType}) }}" class="btn {{ type==availableType?'active'}} btn-secondary">{{ availableType }}</a>
        {% endfor %}
    </div>

    <h1 class="my-4">Timeline for {{ year }}: {{ books|length }} {{ type }}</h1>
    <div class="row">
    {% for book in books %}
        <div class="col-md-4 col-lg-3 col-xl-2 col-sm-4 col-6">
            {% include 'book/_teaser.html.twig' %}
        </div>
    {% endfor %}
    </div>{% endblock %}
