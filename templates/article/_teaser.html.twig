<article class="group cursor-pointer">
    <div class=" overflow-hidden rounded-md bg-gray-100 transition-all hover:scale-105">
        <a class="relative block aspect-square" href="{{ path('app_article',{'slug':article.slug}) }}">
            <img alt="{{ article.title }}"
                 class="object-cover transition-all"
                 style="position: absolute; height: 100%; width: 100%; inset: 0px; color: transparent;"
                 src="{{ asset('images/'~article.image)|imagine_filter('thumb') }}">
        </a>
    </div>
    <div class="">
        <div>
            <div class="flex gap-3">
                <span class="inline-block text-xs font-medium tracking-wider uppercase   mt-5 text-orange-700">
                    {{ article.type }}
                </span>
            </div>
            <h2 class="text-lg font-semibold leading-snug tracking-tight mt-2 ">
                <a href="{{ path('app_article',{'slug':article.slug}) }}">
                    <span class="bg-gradient-to-r from-red-200 to-red-300 bg-[length:0px_10px] bg-left-bottom bg-no-repeat transition-[background-size] duration-500 hover:bg-[length:100%_3px] group-hover:bg-[length:100%_10px] dark:from-purple-800 dark:to-purple-900">
                        {% if article.eventDate is not null %}
                            <span class="bg-red-500 border text-sm rounded mr-1 p-1 text-white">
                                {{ article.eventDate|date('d.m.Y') }}
                            </span>
                        {% endif %}
                        {{ article.title }}
                    </span>
                </a>
            </h2>
            <div class="mt-3 flex items-center space-x-3 text-gray-500">
                <time class="truncate text-xs" datetime="2022-09-25T15:15:00.000Z">&Eacute;crit
                    le {{ article.created|date('d.m.Y') }}</time>
            </div>
        </div>
    </div>
</article>