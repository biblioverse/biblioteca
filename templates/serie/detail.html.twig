{% extends 'base.html.twig' %}

{% block title %} {{ 'menu.series'|trans }} <i class="bi bi-chevron-right mx-2"></i> {{ serie }}{% endblock %}

{% block body %}

    <div class="hero">
        <div class="hero__background"></div>
        <div class="hero__image">
           <a href="{{ path('app_book', {'book':firstUnreadBook.id, 'slug':firstUnreadBook.slug}) }}">
            <img class="w-100"
                 src="{{ asset('covers/'~firstUnreadBook.imagePath~firstUnreadBook.imageFilename)|imagine_filter('big') }}"
                 alt="{{ firstUnreadBook.title }}"/>
            </a>
        </div>
        <div class="hero__title">
            <h1>{{ serie }}</h1>
            {% for author in authors %}
                <i class="bi bi-person-fill"></i>&nbsp;<a href="{{ filter_book_url({'authors':[author]}) }}">{{ author }}</a>
            {% endfor %}
        </div>
        <div class="hero__stats">
            <div>
                <i class="bi bi-play-circle-fill"></i> 
                {{ 'books.stat.progress'|trans({"%count%": inProgressBooks }) }}
            </div>
            <div>
                <i class="bi bi-check-circle-fill"></i>
                {{ 'books.stat.read'|trans({"%count%": readBooks }) }}
            </div>
            <div>
                <i class="bi bi-eye-slash-fill"></i>
                {{ 'books.stat.hidden'|trans({"%count%": hiddenBooks }) }}
            </div>
        </div>
        <div class="hero__progress">
            <div class="heroProgress">
                <div class="heroProgress__text">
                {{ 'books.reading.progress'|trans({"%read%": readBooks, "%total%": books|length }) }}
                </div>
                <div class="heroProgress__bar">
                    <div class="heroProgress__bar__progress" style="width: {{ (readBooks/books|length) *100 }}%">
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="booksWithDetails">
        <div class="booksWithDetails__content">
            <h3>{{ 'books.in-serie'|trans }}</h3>
            <table class="table">
                <tbody>
                {% for book in books %}
                    <tr>
                        <td style="width: 50px; vertical-align: middle; text-align: right;">
                            <span class="text-secondary">{{ book.book.serieIndex }}</span>
                        </td>
                        <td style="width: 100px">
                            <a href="{{ path('app_book',{'slug':book.book.slug,'book':book.book.id}) }}" class=" small">
                                {% include 'book/_cover.html.twig' with { book: book.book, interaction: book.interaction } %}
                            </a>
                        </td>
                        <td style="vertical-align: middle;">
                            <h4>{{ book.book.title }}</h4>
                            {% if book.book.authors|length > 0%}
                            <div>
                                {% for author in book.book.authors %}
                                    <a href="{{ filter_book_url({'authors': author}) }}" class="text-decoration-none text-secondary">
                                        <i class="bi bi-person-fill"></i>&nbsp;{{ author }}
                                    </a>
                                {% endfor %}
                            </div>
                            {% endif %}
                        </td>
                        <td style="vertical-align: middle;">
                            {{ component('InlineEditInteraction', {book:book.book, user: app.user, interaction: book.interaction, shelves: shelves}) }}
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>

        {% if tags|length > 0 %}
        <div class="booksWithDetails__info">
            <div class="infoBlock">
                <h3>{{ 'author.tags'|trans }}</h3>
                <ul style="list-style-type: none; padding-left: 1rem;">
                {% for tag, books in tags %}
                    <li>
                        <a href="{{ filter_book_url({'tags':[tag]}) }}" class="text-decoration-none p-1">
                            <i class="bi bi-tag-fill"></i>&nbsp;{{ tag }}
                        </a>
                    </li>
                {% endfor %}
                </ul>
            </div>
        </div>
        {% endif %}
    </div>
{% endblock %}
